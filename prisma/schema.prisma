generator client {
  provider = "prisma-client-js"
}



datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/grant_pdf"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String    @default("member")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
